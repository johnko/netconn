######################################################################
# Script version is YYmmdd-HHMM in UTC, date +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=141202-081603

if [ "$1" = "-a" ]; then
  case `uname -s` in
  "Darwin")
    lsof -i -n | \
    awk '$9 ~ /([0-9]{1,3}\.){3}[0-9]/ { $4=$5=$6=$7=""; print }' | \
    column -t | \
    sort -r -k 5
  ;;
  "FreeBSD")
    sockstat -46 | \
    awk '$7 ~ /[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+/ { $4=""; print }' | \
    column -t | \
    sort -r -k 5
  ;;
  esac
else
  case `uname -s` in
  "Darwin")
    lsof -i -n | \
    awk '$9 !~ /127.0.0.1/ { $4=$5=$6=$7=""; print }' | \
    grep -v "COMMAND.*PID.*USER.*NODE.*NAME" | \
    column -t | \
    sort -r -k 5
  ;;
  "FreeBSD")
    sockstat -46 | \
    sed -e 's#FOREIGN *ADDRESS#FOREIGN_ADDRESS#' | \
    sed -e 's#LOCAL *ADDRESS#LOCAL_ADDRESS#' | \
    awk '{ $4=""; print }' | \
    column -t | \
    sort -r -k 5
  ;;
  esac
fi
